.main.col-960-1-1
  .main-box.col-960-1-1
    - if object.title.presence
      .main-item.col-960-1-1
        %h1.extra-large.green-ft= object.title
    - if object.description.presence
      .main-item.col-960-1-1
        .trix.extra-large.green
          = safe_join([object.description.html_safe])
      .main-item.col-960-1-1
        - if object.subtitle.presence
          %p.small.white-ft.text-right
            %em= object.subtitle
