// Show

- content_for :breadcrumbs do
  .breadcrumbs
    %ul.breadcrumbs-box
      %li.breadcrumbs-item
        = link_to "Voltar", categories_path, class: "link mono tiny"

.panel-one
  .main.col-960-1
    .main-box.col-960-1
      - if @academy_course.title.presence
        .main-item.col-960-1
          %h1= @academy_course.title
      - if @academy_course.description.presence
        .main-item.col-960-1
          %p.medium= @academy_course.description
    .main-box.col-960-1
      .main-item.col-960-4
        .menu-aside
          .menu-aside-box
            - if @academy_course.document_box.presence
              .menu-aside-item
                = link_to @academy_course.document_caption, @academy_course.document_box.url.to_s, class: "button tiny left wide", target: "_blank"
            .menu-aside-item
              = link_to "Inscrições", "#", class: "off button tiny left wide"
      .main-item.col-960-4-3
        .misc
          .misc-box
            .misc-item
              .trix.small
                = @academy_course.misc.html_safe
