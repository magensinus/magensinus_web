// Menu

- if fetch_primary_urls.presence
  .menu
    %ul.menu-box
      - fetch_primary_urls.each do |object|
        %li{ class: "menu-item #{active_class(object[:url])}" }
          - if object[:id] == 3
            = link_to object[:title], object[:url], class: "link nano left #{object[:klass]}"
            = render "lib/components/menu_dropdown"
          - else
            = link_to object[:title], object[:url], class: "link nano left"
